#include <stdio.h>
#include <locale.h>
#include <stdlib.h>
#include <math.h>
int main()
{
    char *locale = setlocale(LC_ALL, "");
    int a = 0;
    int b = 0;
    int c = 0;
    int answer = 0;
    printf("Введите A: ");
    scanf("%d", &a);
    printf("Введите B: ");
    scanf("%d", &b);
    printf("Введите C: ");
    scanf("%d", &c);
    if (abs(b-a)<abs(c-a))
    {
    printf("Точка B на расстоянии: %d \n", abs(b-a));
    }
    else
    {
    printf("Точка C на расстоянии: %d \n", abs(c-a));
    }
    return 0;
}
