#include <stdio.h>
#include <locale.h>
#include <stdlib.h>
#include <math.h>
int main()
{
    char *locale = setlocale(LC_ALL, "");
    int x = 0;
    int y = 0;
    int c = 0;
    int answer = 0;
    printf("Введите число: ");
    scanf("%d", &x);
    if (x == 0)
    {
        printf("нулевое ");
    }
    else
    {
        if (x > 0)
            printf("положительное ");
        else
            printf("отрицательное ");
        if (x % 2 == 0)
            printf("четное ");
        else
            printf("нечетное ");
    }
    printf("число \n");
    return 0;
}
